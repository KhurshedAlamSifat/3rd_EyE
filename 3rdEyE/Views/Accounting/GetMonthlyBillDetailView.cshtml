@*@model IEnumerable<_3rdEyE.CustomModels.MonthlyBillEntry>*@
@{
    Layout = null;
}
@{
    var Model = (List<_3rdEyE.Models.MonthlyBillEntry>)ViewBag.BillEntryList;
}
<!DOCTYPE html>
<html>
<head>
</head>
<body style="width:50%;">
    @if (@Model != null && Model.Count() > 0)
    {
        var _sl = 0;
        var __sl = 0;
        var _unitPrice = 200;
        var _totalPrice = 0;
        <table id="data_table_detail" class="table table-bordered table-striped">
            <tbody id="data_tbody">
                @foreach (var depoName in Model.Select(m => m.DepoName).Distinct())
                {
                    <tr style="background-color:#3B5998; color:white;">
                        <th colspan="3">
                            @depoName
                        </th>
                    </tr>
                    <tr>
                        <td>SL</td>
                        <td>Registration Number</td>
                        <td>Company Name</td>
                    </tr>
                    __sl = 0;

                    foreach (var vehicle in Model.Where(m => m.DepoName == @depoName).ToList())
                    {
                        __sl = __sl + 1;
                        <tr>
                            <td>@__sl</td>
                            <td>@vehicle.RegistrationNumber</td>
                            <td>@vehicle.CompanyName</td>
                        </tr>
                    }

                }

            </tbody>
        </table>
    }
</body>
</html>



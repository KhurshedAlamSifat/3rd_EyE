                    @Html.DropDownList("FK_DepoGroup", ViewBag.DepoGroups as SelectList, "Select User Sub-Group", new { @class = "form-control", onchange = "GetInitialDataByDepoGroup()" })
                </div>
                <div class="col-md-12 form-group" style="margin-bottom:5px;">

    function InitiateMap() {
        map = new google.maps.Map(document.getElementById('mapDiv'), {
            zoom: 8,
            center: { lat: 23.8103, lng: 90.4125 },
        });

        var trafficLayer = new google.maps.TrafficLayer();
        trafficLayer.setMap(map);


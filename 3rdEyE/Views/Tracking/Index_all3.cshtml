<section class="content">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12 form-group" style="margin-bottom:10px;">
                    <label style="font-size:x-large;">Live Tracking</label>
                </div>
                <div class="col-md-12 form-group">
                    <select name="tracking_view_type" class="form-control" onchange="ShowTrackingTypeCombo()">
                        <option value="default">View All</option>
                        <option value="depo">Filter By User Group</option>

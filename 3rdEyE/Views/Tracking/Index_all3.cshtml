    function GetInitialDataByDefault() {
        $.ajax({
            traditional: true,
            type: "post",
            dataType: "json",
            contentType: "application/json",
            url: "/Tracking/GetData/",
            success: function (list) {
                updatedDataList = list;

                MakeSideList();

                setTimeout(MakeMap, 1000);

                FilterSideItemListAndMapByStatus();
            },
            error: function (xhr, textStatus, errorThrown) {
                console.log("Err on call: GetInitialDataByDefault()");
            }
        });
    }

    function GetInitialDataByDepo() {
        var FK_Depo = $("select[name=FK_Depo]").val();
        if (FK_Depo == "") {
            return;
        }
        $.ajax({
            traditional: true,
            type: "post",
            dataType: "json",
            contentType: "application/json",
            url: "/Tracking/GetDataByDepo/",
            data: JSON.stringify({ FK_Depo: FK_Depo }),
            success: function (list) {
                updatedDataList = list;

                MakeSideList();

                setTimeout(MakeMap, 1000);

                FilterSideItemListAndMapByStatus();

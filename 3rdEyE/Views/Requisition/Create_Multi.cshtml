                            <label class="col-md-4 control-label">Organization*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("OrganizationCode", ViewBag.Organizations as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-category="errorMessage" name="error_OrganizationCode"></b>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Delivery Type</label>
                            <div class="col-md-8">
                                @Html.DropDownList("DeliveryType", ViewBag.RequisitionDeliveryTypes as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-category="errorMessage" name="error_DeliveryType"></b>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Product Type*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("ProductType", ViewBag.RequisitionProductTypes as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-category="errorMessage" name="error_ProductType"></b>
                            </div>
                        </div>
                    </div>
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Vehicle Type*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("FK_RequisitionVehicleType", ViewBag.RequisitionVehicleTypes as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-category="errorMessage" name="error_FK_RequisitionVehicleType"></b>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">How Many*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("WantedCount", ViewBag.WantedQuantityDict as SelectList, new { @class = "form-control" })

@model IEnumerable<_3rdEyE.Models.IndividualRequisition>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        /*table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
        }*/
    </style>
</head>
<body style="width:50%;">
    <p>Dear Sir/Madam,</p>
    <p>Here is the report based on Inter-Company Vehicle Sharing [demanded for @Model.FirstOrDefault().PossibleJourneyStartDateTime.ToShortDateString()].</p>
    <br />
    <h4>Requisition Created</h4>
    <table cellpadding="10" style="font-size: 12px; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="border: 1px solid black;">
                    Group
                </th>
                <th style="border: 1px solid black;">
                    Total Demand Created
                </th>
                <th style="border: 1px solid black;">
                    Total Demanded vehicle
                </th>
            </tr>
        </thead>
        <tbody id="detail_tbody">
            @foreach (var group in Model.GroupBy(m => m.AppUser.PRG_Type))
            {
                <tr>
                    <td style="border: 1px solid black;">@group.Key</td>
                    <td style="border: 1px solid black;">@group.Count()</td>
                    <td style="border: 1px solid black;">@group.Sum(m => m.WantedCount)</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <h4>Vehicle Shared</h4>
    <table cellpadding="10" style="font-size: 12px; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="border: 1px solid black;">
                </th>
                <th style="border: 1px solid black;">
                    PRAN
                </th>
                <th style="border: 1px solid black;">
                    RFL
                </th>
                <th style="border: 1px solid black;">
                    OUTSIDE
                </th>
                <th style="border: 1px solid black;">
                    Driver's Trips
                </th>
            </tr>
        </thead>
        <tbody id="detail_tbody">
            @{
                var PRAN_RFL = Model.Where(m => m.AppUser.PRG_Type == "PRAN" && m.Status == 1).SelectMany(m => m.IndividualRequisitionBiddings).Where(m => m.AppUser.PRG_Type == "RFL" && m.Status == 2).Select(m => m.ManagableQuantity).Sum();

                var RFL_PRAN = Model.Where(m => m.AppUser.PRG_Type == "RFL" && m.Status == 1).SelectMany(m => m.IndividualRequisitionBiddings).Where(m => m.AppUser.PRG_Type == "PRAN" && m.Status == 2).Select(m => m.ManagableQuantity).Sum();
            }
            <tr>
                <td style="border: 1px solid black;">PRAN</td>
                <td style="border: 1px solid black;">X</td>
                <td style="border: 1px solid black;">@PRAN_RFL</td>
                <td style="border: 1px solid black;">@ViewBag.OutSide_PRAN</td>
                <td style="border: 1px solid black;">@ViewBag.InstantRequisition_PRAN</td>
            </tr>
            <tr>
                <td style="border: 1px solid black;">RFL</td>
                <td style="border: 1px solid black;">@RFL_PRAN</td>
                <td style="border: 1px solid black;">X</td>
                <td style="border: 1px solid black;">@ViewBag.OutSide_RFL</td>
                <td style="border: 1px solid black;">@ViewBag.InstantRequisition_RFL</td>
            </tr>
        </tbody>
    </table>
    <br />
    <p>Autogenerated by Automation-MIS-PRG</p>

</body>
</html>



@model IEnumerable<_3rdEyE.Controllers.EventController.EventAlertEmailRow>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        /*th, td {
            padding: 15px;
        }*/
    </style>
</head>
<body style="width:50%;">

    <h2>@ViewBag.Message_1</h2>
    <p></p>

    <table>
        <tr>
            <th>User Group</th>
            <th>Vehicle</th>
            <th>Tax Token</th>
            <th>Fitness</th>
            <th>Route permit</th>
        </tr>
        @{
            var _vehicle_Depo = "";
        }
        @foreach (var item in Model)
        {
            <tr>
                @if (item.vehicle_Depo != _vehicle_Depo)
                {
                    <td rowspan="@Model.Where(m=>m.vehicle_Depo == item.vehicle_Depo).Count()">@item.vehicle_Depo</td>
                    _vehicle_Depo = item.vehicle_Depo;
                }
                else
                {
                }
                <td>@item.vehicle_Reg</td>
                <td>@item.tax_token_expirationDate</td>
                <td>@item.fitness_paper_expirationDate</td>
                <td>@item.route_permit_expirationDate</td>
            </tr>
        }

    </table>

    <p>Autogenerated by Automation-MIS-PRG</p>

</body>
</html>



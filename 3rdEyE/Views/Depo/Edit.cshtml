@{
    ViewBag.Title = "Create";
}

<section class="content-header">
    <h1>
        Edit User Group
        <small></small>
    </h1>
    <div class="breadcrumb">
        <a class="btn btn-block btn-info btn-sm" href="@System.Web.HttpContext.Current.Request.UrlReferrer">Back To List</a>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">User Group Information</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form name="ThisForm" class="form-horizontal" method="post" action="/Depo/Edit">
                    <input name="PK_Depo" value="@ViewBag.model.PK_Depo" type="text" class="form-control" style="display:none;">
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Name*</label>
                            <div class="col-md-8">
                                <input name="Name" value="@ViewBag.model.Name" type="text" class="form-control">
                                <b class="errorMessage" data-category="errorMessage" name="error_Name"></b>
                            </div>
                            <script>
                                validatorArray.push(
                                    function () {
                                        var check = $('input[name=Name]').val();
                                        if (check == "") {
                                            formValidity = false;
                                            $('b[name=error_Name]').html("User Group name is required.");
                                        }
                                    });
                            </script>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">PRG Type*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("PRG_Type", ViewBag.PRG_TypesDict as SelectList, "Select", new { @class = "form-control", @disabled = "disabled" })
                                <b class="errorMessage" data-category="errorMessage" name="error_PRG_Type"></b>
                                <script>
                                    validatorArray.push(
                                        function () {
                                            var check = $('select[name=PRG_Type]').val();
                                            if (check == "") {
                                                formValidity = false;
                                                $('b[name=error_PRG_Type]').html("PRG Type is required.");
                                            }
                                        });
                                </script>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Category*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("Category", ViewBag.Depo_CategoryDict as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-category="errorMessage" name="error_Category"></b>
                                <script>
                                    validatorArray.push(
                                        function () {
                                            var check = $('select[name=Category]').val();
                                            if (check == "") {
                                                formValidity = false;
                                                $('b[name=error_Category]').html("Category is required.");
                                            }
                                        });
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Latitude</label>
                            <div class="col-md-8">
                                <input name="Latitude" value="@ViewBag.model.Latitude" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_Latitude"></b>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Longitude</label>
                            <div class="col-md-8">
                                <input name="Longitude" value="@ViewBag.model.Longitude" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_Longitude"></b>
                            </div>
                        </div>

                    </div>
                    <div class="box-footer">
                        <input type="button" class="btn btn-info center-block" value="Save" onclick="TrySubmit()" />
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>


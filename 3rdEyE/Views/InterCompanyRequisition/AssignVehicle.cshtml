<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Assign Inter Company Requisition
        <small></small>
    </h1>
    <div class="breadcrumb">
        @*<button type="button" class="btn btn-block btn-info btn-sm">Info</button>*@

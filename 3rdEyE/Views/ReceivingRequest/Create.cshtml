                                <script>
                                    validatorArray.push(
                                        function () {
                                            var check = $('select[name=CarrerType]').val();
                                            if (check == "") {
                                                formValidity = false;
                                                $('b[name=error_CarrerType]').html("required.");
                                            }
                                        });
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="box-body col-md-12">

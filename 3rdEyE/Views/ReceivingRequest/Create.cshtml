                                <script>
                                    validatorArray.push(
                                        function () {
                                            var check = $('select[name=FK_LocationDepartment]').val();
                                            if (check == "") {
                                                formValidity = false;
                                                $('b[name=error_FK_LocationDepartment]').html("required.");
                                            }
                                        });
                                </script>
                            </div>
                        </div>
                    </div>

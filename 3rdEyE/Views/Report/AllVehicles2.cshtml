@model IEnumerable<_3rdEyE.ViewModels.VM_Vehicle>

@{
    ViewBag.Title = "Vehicle list";
}

@*Select2*@
<link href="~/Theme/bower_components/select2/dist/css/select2.min.css" rel="stylesheet" />
<!-- DataTables -->
<link rel="stylesheet" href="~/Theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Vehicle List
        <small></small>
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Vehicle List</h3>
                </div>

                <div class="row">
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-3">
                            <label class="col-md-4 control-label">User Group:</label>
                            <div class="col-md-8">
                                @Html.DropDownList("FK_Depo", ViewBag.Depoes as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="col-md-4 control-label">User Compnay:</label>
                            <div class="col-md-8">
                                @Html.DropDownList("FK_Company", ViewBag.UserCompanies as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="col-md-4 control-label">Own/MHT/DHT:</label>
                            <div class="col-md-8">
                                @Html.DropDownList("OWN_MHT_DHT", ViewBag.OWN_MHT_DHT as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="col-md-4 control-label">Sub User Group:</label>
                            <div class="col-md-8">
                                @Html.DropDownList("FK_DepoGroup", ViewBag.DepoGroups as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-3">
                            <label class="col-md-4 control-label">Reg. Number:</label>
                            <div class="col-md-8">
                                <input id="RegistrationNumber" name="RegistrationNumber" value="@ViewBag.RegistrationNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="box-body col-md-12">
                        <div class="col-md-2">
                            <button class="btn btn-facebook" onclick="FilterByInputToRedirectView()">Filter</button>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="overflow-x:scroll;">


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@*Select2*@
<script src="~/Theme/bower_components/select2/dist/js/select2.min.js"></script>
<!-- DataTables -->
<script src="~/Theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/Theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script>
    $(function () {
        $('select').select2();
        $('#data_table').DataTable({ "scrollX": true });
    });
</script>

<script>
    function FilterByInputToRedirectView() {
        var url = "/Report/AllVehicles2?";
        var FK_Depo = $("select[name=FK_Depo]").val();
        if (FK_Depo != '') {
            url = url + "FK_Depo=" + FK_Depo;
        }

        var FK_Company = $("select[name=FK_Company]").val();
        if (FK_Company != '') {
            url = url + "&FK_Company=" + FK_Company;
        }

        var OWN_MHT_DHT = $("select[name=OWN_MHT_DHT]").val();
        if (OWN_MHT_DHT != '') {
            url = url + "&OWN_MHT_DHT=" + OWN_MHT_DHT;
        }

        var FK_DepoGroup = $("select[name=FK_DepoGroup]").val();
        if (FK_DepoGroup != '') {
            url = url + "&FK_DepoGroup=" + FK_DepoGroup;
        }

        var RegistrationNumber = $("input[name=RegistrationNumber]").val();
        if (RegistrationNumber != '') {
            url = url + "&RegistrationNumber=" + RegistrationNumber;
        }

        //if (FK_Depo != null || FK_Company != null || OWN_MHT_DHT != null || FK_DepoGroup != null || RegistrationNumber != null) {
        //    window.location = url;
        //} else {
        //    alert("You must select any filter values");
        //}


    }

</script>


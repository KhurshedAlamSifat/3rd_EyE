@{
    Layout = null;
    List<Dictionary<string, string>> VehicleInsideSummaryData = (List<Dictionary<string, string>>)ViewBag.VehicleInsideSummaryData;
    List<Dictionary<string, string>> OverSpeedSummaryData = (List<Dictionary<string, string>>)ViewBag.OverSpeedSummaryData;
    List<Dictionary<string, string>> OwnVehicleSummaryData = (List<Dictionary<string, string>>)ViewBag.OwnVehicleSummaryData;
    List<Dictionary<string, string>> AccidentSummaryData = (List<Dictionary<string, string>>)ViewBag.AccidentSummaryData;
    List<Dictionary<string, string>> VehicleVsTripSummaryData = (List<Dictionary<string, string>>)ViewBag.VehicleVsTripSummaryData;
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CEO Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="~/Theme/bower_components/bootstrap/dist/css/bootstrap.min.css">

    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>*@
    <script src="~/Theme/bower_components/jquery/dist/jquery.min.js"></script>

    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@
    <script src="~/Theme/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.0.0/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <style>
        .data_panel {
            border-style: groove;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12 data_panel" style="border-color: lightgray;">
                        <h2>Workshop Vehicle</h2>
                        <canvas id="workshopCanvas" height="100"></canvas>
                    </div>
                    <div class="col-md-12 data_panel" style="border-color: lightgray;">
                        <h2>Overspeed</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User Group</th>
                                    <th>Over 60</th>
                                    <th>Over 70</th>
                                    <th>Over 80</th>
                                    <th>Over 90</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in OverSpeedSummaryData)
                                {
                                    <tr>
                                        <th>@item["DepoName"]</th>
                                        <td>@item["Count_60_to_70"]</td>
                                        <td>@item["Count_70_to_80"]</td>
                                        <td>@item["Count_80_to_90"]</td>
                                        <td>@item["Count_90_to_up"]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12 data_panel" style="border-color: lightgray; ">
                        <h2>Inside Stay Vehicle Summary</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User Group</th>
                                    <th>1-3 Hour</th>
                                    <th>3-6 Hour</th>
                                    <th>6-10 Hour</th>
                                    <th>10+ Hour</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in VehicleInsideSummaryData)
                                {
                                    <tr>
                                        <th>@item["DepoName"]</th>
                                        <td>@item["Count_1_to_3_hours"]</td>
                                        <td>@item["Count_3_to_6_hours"]</td>
                                        <td>@item["Count_6_to_10_hours"]</td>
                                        <td>@item["Count_10_to_up_hours"]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12 data_panel" style="border-color: lightgray; ">
                        <h2>Vehicle Vs Trip Summary Data</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Trip Count</th>
                                    <th>VehicleCount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in VehicleVsTripSummaryData)
                                {
                                    <tr>
                                        <th>@item["TripCount"]</th>
                                        <td>@item["VehicleCount"]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 data_panel" style="border-color: lightgray;">
                        <h2>Vehicle Information</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User Group</th>
                                    <th>OWN Trip</th>
                                    <th>Hired Trip</th>
                                    <th>Total Vehicle</th>
                                    <th>Cargo Truck</th>
                                    <th>Cargo Truck - Open</th>
                                    <th>Cargo VAN</th>
                                    <th>Covered Van</th>
                                    <th>Delivery Van</th>
                                    <th>Mini Truck</th>
                                    <th>Open VAN</th>
                                    <th>Pickup</th>
                                    <th>Tank Lorry</th>
                                    <th>Tipper</th>
                                    <th>Trailers</th>
                                    <th>Van</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in OwnVehicleSummaryData)
                                {
                                    <tr>
                                        <td>@item["DepoName"]</td>
                                        <td>@(item.ContainsKey("OWN_Trip")? item["OWN_Trip"]:"")</td>
                                        <td>@(item.ContainsKey("DHT_Trip") ? item["DHT_Trip"]:"")</td>
                                        <td>@item["All_Vehicle_Count"]</td>
                                        <td>@item["Cargo_Truck_Count"]</td>
                                        <td>@item["Cargo_Truck_Open_Count"]</td>
                                        <td>@item["Cargo_VAN_Count"]</td>
                                        <td>@item["Covered_Van_Count"]</td>
                                        <td>@item["Delivery_Van_Count"]</td>
                                        <td>@item["Mini_Truck_Count"]</td>
                                        <td>@item["Open_VAN_Count"]</td>
                                        <td>@item["Pickup_Count"]</td>
                                        <td>@item["Tank_Lorry_Count"]</td>
                                        <td>@item["Tipper_Count"]</td>
                                        <td>@item["Trailers_Count"]</td>
                                        <td>@item["Van_Count"]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 data_panel" style="border-color: lightgray;">
                        <h2>Last 30 Days Accident Summary</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User Group</th>
                                    <th>Total Accidents</th>
                                    <th>Cargo Truck</th>
                                    <th>Cargo Truck - Open</th>
                                    <th>Cargo VAN</th>
                                    <th>Covered Van</th>
                                    <th>Delivery Van</th>
                                    <th>Mini Truck</th>
                                    <th>Open VAN</th>
                                    <th>Pickup</th>
                                    <th>Tank Lorry</th>
                                    <th>Tipper</th>
                                    <th>Trailers</th>
                                    <th>Van</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in AccidentSummaryData)
                                {
                                    <tr>
                                        <td>@item["DepoName"]</td>
                                        <td>@item["All_Acident_Count"]</td>
                                        <td>@item["Cargo_Truck_Count"]</td>
                                        <td>@item["Cargo_Truck_Open_Count"]</td>
                                        <td>@item["Cargo_VAN_Count"]</td>
                                        <td>@item["Covered_Van_Count"]</td>
                                        <td>@item["Delivery_Van_Count"]</td>
                                        <td>@item["Mini_Truck_Count"]</td>
                                        <td>@item["Open_VAN_Count"]</td>
                                        <td>@item["Pickup_Count"]</td>
                                        <td>@item["Tank_Lorry_Count"]</td>
                                        <td>@item["Tipper_Count"]</td>
                                        <td>@item["Trailers_Count"]</td>
                                        <td>@item["Van_Count"]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        Chart.register(ChartDataLabels);
        const ctx = document.getElementById('workshopCanvas').getContext('2d');
        const myChart = new Chart(ctx, {
            "type": "bar",
            "data": {
                "datasets": [
                    {
                        "label": "",
                        "data": [@ViewBag.WorkshopInsideSummaryData],//[1,2,3,4,5]
                        "fill": false,
                        "spanGaps": false,
                        "lineTension": 0.4,
                        "pointRadius": 3,
                        "pointHoverRadius": 3,
                        "pointStyle": "circle",
                        "borderDash": [
                            0,
                            0
                        ],
                        "barPercentage": 0.9,
                        "categoryPercentage": 0.8,
                        "type": "bar",
                        "borderColor": "#4E79A7",
                        "backgroundColor": [
                            "#FFFE03",
                            "#FFD806",
                            "#FFAC09",
                            "#FF840A",
                            "#FF5F05"
                        ],
                        "borderWidth": 0,
                        "hidden": false
                    }
                ],
                "labels": ['0-1 Day', '1-3 Days', '3-7 Days', '7-30 Days', '30+ Days'],
            },
            "options": {
                "title": {
                    "display": true,
                    "position": "top",
                    "fontSize": 12,
                    "fontFamily": "sans-serif",
                    "fontColor": "#666666",
                    "fontStyle": "bold",
                    "padding": 10,
                    "lineHeight": 1.2,
                    "text": ""
                },
                "layout": {
                    "padding": {},
                    "left": 0,
                    "right": 0,
                    "top": 0,
                    "bottom": 0
                },
                "legend": {
                    "display": false,
                    "position": "top",
                    "align": "center",
                    "fullWidth": true,
                    "reverse": false,
                    "labels": {
                        "fontSize": 12,
                        "fontFamily": "sans-serif",
                        "fontColor": "#666666",
                        "fontStyle": "normal",
                        "padding": 10
                    }
                },
                "scales": {
                    "xAxes": [
                        {
                            "id": "X1",
                            "display": false,
                            "position": "bottom",
                            "type": "category",
                            "stacked": false,
                            "offset": true,
                            "time": {
                                "unit": false,
                                "stepSize": 1,
                                "displayFormats": {
                                    "millisecond": "h:mm:ss.SSS a",
                                    "second": "h:mm:ss a",
                                    "minute": "h:mm a",
                                    "hour": "hA",
                                    "day": "MMM D",
                                    "week": "ll",
                                    "month": "MMM YYYY",
                                    "quarter": "[Q]Q - YYYY",
                                    "year": "YYYY"
                                }
                            },
                            "distribution": "linear",
                            "gridLines": {
                                "display": false,
                                "color": "rgba(0, 0, 0, 0.1)",
                                "borderDash": [
                                    0,
                                    0
                                ],
                                "lineWidth": 1,
                                "drawBorder": true,
                                "drawOnChartArea": true,
                                "drawTicks": true,
                                "tickMarkLength": 10,
                                "zeroLineWidth": 1,
                                "zeroLineColor": "rgba(0, 0, 0, 0.25)",
                                "zeroLineBorderDash": [
                                    0,
                                    0
                                ]
                            },
                            "angleLines": {
                                "display": true,
                                "color": "rgba(0, 0, 0, 0.1)",
                                "borderDash": [
                                    0,
                                    0
                                ],
                                "lineWidth": 1
                            },
                            "pointLabels": {
                                "display": true,
                                "fontColor": "#666",
                                "fontSize": 10,
                                "fontStyle": "normal"
                            },
                            "ticks": {
                                "display": true,
                                "fontSize": 12,
                                "fontFamily": "sans-serif",
                                "fontColor": "#666666",
                                "fontStyle": "normal",
                                "padding": 0,
                                "stepSize": null,
                                "minRotation": 0,
                                "maxRotation": 50,
                                "mirror": false,
                                "reverse": false
                            },
                            "scaleLabel": {
                                "display": false,
                                "labelString": "Axis label",
                                "lineHeight": 1.2,
                                "fontColor": "#666666",
                                "fontFamily": "sans-serif",
                                "fontSize": 12,
                                "fontStyle": "normal",
                                "padding": 4
                            }
                        }
                    ],
                    "yAxes": []
                },
                "plugins": {
                    "datalabels": {
                        "display": true,
                        "align": "top",
                        "anchor": "end",
                        "backgroundColor": "#000000",
                        "borderColor": "#000000",
                        "borderRadius": 0,
                        "borderWidth": 1,
                        "padding": 4,
                        "color": "#ffffff",
                        "font": {
                            "family": "sans-serif",
                            "size": 14,
                            "style": "normal"
                        }
                    },
                    "datalabelsZAxis": {
                        "enabled": false
                    },
                    "googleSheets": {},
                    "airtable": {},
                    "tickFormat": ""
                },
                "cutoutPercentage": 50,
                "rotation": -1.5707963267948966,
                "circumference": 6.283185307179586,
                "startAngle": -1.5707963267948966
            }
        });
    </script>
</body>
</html>

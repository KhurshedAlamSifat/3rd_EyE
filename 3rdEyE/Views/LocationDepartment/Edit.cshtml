@model _3rdEyE.Models.LocationDepartment
@*Select2*@
<link href="~/Theme/bower_components/select2/dist/css/select2.min.css" rel="stylesheet" />
<section class="content-header">
    <h1>
        Edit LocationDepartment
        <small></small>
    </h1>
    <div class="breadcrumb">
        <a class="btn btn-block btn-info btn-sm" href="@System.Web.HttpContext.Current.Request.UrlReferrer">Back To List</a>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">LocationDepartment Information</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form name="ThisForm" class="form-horizontal" method="post" action="/LocationDepartment/Edit">
                    <input name="PK_LocationDepartment" value="@Model.PK_LocationDepartment" type="text" class="form-control" style="display:none;">
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">DepartmentCode*</label>
                            <div class="col-md-8">
                                @Html.EditorFor(m => m.DepartmentCode, new { htmlAttributes = new { @class = "form-control" } })
                                <b class="errorMessage" data-category="errorMessage" name="error_DepartmentCode"></b>
                            </div>
                            <script>
                                validatorArray.push(
                                    function () {
                                        var check = $('input[name=DepartmentCode]').val();
                                        if (check == "") {
                                            formValidity = false;
                                            $('b[name=error_DepartmentCode]').html("required.");
                                        }
                                    });
                            </script>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">DepartmentName*</label>
                            <div class="col-md-8">
                                @Html.EditorFor(m => m.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                                <b class="errorMessage" data-category="errorMessage" name="error_DepartmentName"></b>
                            </div>
                            <script>
                                validatorArray.push(
                                    function () {
                                        var check = $('input[name=DepartmentName]').val();
                                        if (check == "") {
                                            formValidity = false;
                                            $('b[name=error_DepartmentName]').html("required.");
                                        }
                                    });
                            </script>
                        </div>
                    </div>
                    <div class="box-body col-md-12">
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">PRG Type*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("PRG_Type", ViewBag.PRG_TypesDict as SelectList, "Select", new { @class = "form-control", @disabled = "disabled" })
                                <b class="errorMessage" data-category="errorMessage" name="error_PRG_Type"></b>
                            </div>
                            <script>
                                validatorArray.push(
                                    function () {
                                        var check = $('select[name=PRG_Type]').val();
                                        if (check == "") {
                                            formValidity = false;
                                            $('b[name=error_PRG_Type]').html("required.");
                                        }
                                    });
                            </script>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="col-md-4 control-label">Location*</label>
                            <div class="col-md-8">
                                @Html.DropDownList("FK_Location", ViewBag.Locations as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-FK_Location="errorMessage" name="error_FK_Location"></b>
                                <script>
                                    validatorArray.push(
                                        function () {
                                            var check = $('select[name=FK_Location]').val();
                                            if (check == "") {
                                                formValidity = false;
                                                $('b[name=error_FK_Location]').html("required.");
                                            }
                                        });
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <input type="button" class="btn btn-info center-block" value="Save" onclick="TrySubmit()" />
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>
@*Select2*@
<script src="~/Theme/bower_components/select2/dist/js/select2.min.js"></script>
<script>
    $(function () {
        $('select[name=FK_Location]').select2();
    });
</script>
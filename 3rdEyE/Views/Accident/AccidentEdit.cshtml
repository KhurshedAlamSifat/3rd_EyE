                                    </div>
                                </div>
                            </div>
                            @*DescriptionAccident*@
                            <div class="box-body">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Description Accident</label>
                                    <div class="col-md-8">
                                        <textarea name="DescriptionAccident" Id="DescriptionAccident" class="form-control">@Model.DescriptionAccident</textarea>

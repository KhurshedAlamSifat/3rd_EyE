                                <div class="row">
                                    <div class="col-md-12">
                                        <table id="data_table" class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width: 5%">
                                                        SL
                                                    </th>
                                                    <th style="width: 30%">
                                                        Document Type
                                                    </th>
                                                    <th style="width: 20%">
                                                        Name
                                                    </th>

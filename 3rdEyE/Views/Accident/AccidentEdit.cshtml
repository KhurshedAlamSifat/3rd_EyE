                                    </div>
                                </div>
                            </div>
                            @*FK_DepoFollowUp*@
                            <div class="box-body">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Following User Group*</label>
                                    <div class="col-md-8">
                                        @Html.DropDownList("FK_DepoFollowUp", ViewBag.Depoes as SelectList, "Select", new { @class = "form-control" })

@model _3rdEyE.Models.Location

<section class="content-header">
    <h1>
        View Location
        <small></small>
    </h1>
    <div class="breadcrumb">
        @*<button type="button" class="btn btn-block btn-info btn-sm">Info</button>*@
        <a class="btn btn-block btn-info btn-sm" href="@System.Web.HttpContext.Current.Request.UrlReferrer">Back To List</a>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Location Information</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form name="ThisForm" class="form-horizontal" method="post" action="/Location/Create">

                    @*Name*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Name*</label>
                            <div class="col-md-10">
                                <input name="Name" value="@Model.Name" type="text" class="form-control">
                                <b class="errorMessage" data-category="errorMessage" name="error_Name"></b>
                            </div>
                        </div>
                    </div>
                    @*PRG_Type*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">PRG Type</label>
                            <div class="col-md-10">
                                <input name="Name" value="@Model.PRG_Type" type="text" class="form-control">
                                <b class="errorMessage" data-category="errorMessage" name="error_Name"></b>
                            </div>
                        </div>
                    </div>
                    @*Category*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">LocationType</label>
                            <div class="col-md-10">
                                <input name="Name" value="@Model.LocationType" type="text" class="form-control">
                                <b class="errorMessage" data-category="errorMessage" name="error_Name"></b>
                            </div>
                        </div>
                    </div>

                    @*Latitude*@
                    @*<div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Latitude</label>
                            <div class="col-md-10">
                                <input name="Latitude" value="@Model.Latitude" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_Latitude"></b>
                            </div>
                        </div>
                    </div>*@
                    @*Longitude*@
                    @*<div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Longitude</label>
                            <div class="col-md-10">
                                <input name="Longitude" value="@Model.Longitude" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_Longitude"></b>
                            </div>
                        </div>
                    </div>*@
                    <div class="box-footer">
                        @*<a class="btn btn-default" href="/Location/Index">Back To List</a>*@
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>
<script>
    $('document').ready(function () {
        $('input').attr("disabled", "disabled");
        $('textarea').attr("disabled", "disabled");
        $('select').attr("disabled", "disabled");
    });
</script>
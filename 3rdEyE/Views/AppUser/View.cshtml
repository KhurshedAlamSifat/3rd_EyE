<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">User Information</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form name="ThisForm" class="form-horizontal" method="post" action="/AppUser/Edit">
                    <div class="box-body col-md-12">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td>
                                        <label>Staff ID Number: </label>&nbsp; @Html.DisplayFor(m => m.Model.UniqueIDNumber)
                                    </td>
                                    <td>
                                        <label>Full Name: </label>&nbsp;@Html.DisplayFor(m => m.Model.FullName)
                                    </td>
                                    <td>
                                        <label>User Group: </label>&nbsp;@Html.DisplayFor(m => m.Model.Depo.Name)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label>PRG Type: </label>&nbsp;@Html.DisplayFor(m => m.Model.PRG_Type)
                                    </td>
                                    <td>
                                        <label>Requisiotn Agent: </label>&nbsp;@Html.DisplayFor(m => m.Model.AppUserType)
                                    </td>
                                    <td>
                                        <label>Contact Number: </label>&nbsp;@Html.DisplayFor(m => m.Model.ContactNumber)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label>Email Address: </label>&nbsp;@Html.DisplayFor(m => m.Model.Email)
                                    </td>
                                    <td colspan="2">
                                        <label>Contact Address: </label>&nbsp;@Html.DisplayFor(m => m.Model.ContactAddress)
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <label>User Group Access: </label>&nbsp;
                                        @foreach (var item in ViewBag.AppUserAccessibleDepoes)
                                        {
                                            @item; <text>,&nbsp;</text>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <label>Requisition Proposable User Group: </label>&nbsp;
                                        @foreach (var item in ViewBag.RequisitionAgentProposedDepoes)
                                        {
                                            @item; <text>,&nbsp;</text>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

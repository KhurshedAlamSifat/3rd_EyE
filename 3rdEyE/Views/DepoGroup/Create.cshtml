
@{
    ViewBag.Title = "Create";
}

@*Date picker*@
<link href="~/Theme/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
@*Select2*@
<link href="~/Theme/bower_components/select2/dist/css/select2.min.css" rel="stylesheet" />

<section class="content-header">
    <h1>
        Create New Sub User Group
        <small></small>
    </h1>
    <div class="breadcrumb">
        @*<button type="button" class="btn btn-block btn-info btn-sm">Info</button>*@
        <a class="btn btn-block btn-info btn-sm" href="@System.Web.HttpContext.Current.Request.UrlReferrer">Back To List</a>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Sub User Group Information</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form name="ThisForm" class="form-horizontal" method="post" action="/DepoGroup/Create">

                    @*Name*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Name*</label>
                            <div class="col-md-10">
                                <input name="Name" value="@ViewBag.model.Name" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_Name"></b>
                            </div>
                        </div>
                        <script>
                            validatorArray.push(
                                function () {
                                    var check = $('input[name=Name]').val();
                                    if (check == "") {
                                        formValidity = false;
                                        $('b[name=error_Name]').html("Sub User Group name is required.");
                                    }
                                });
                        </script>
                    </div>
                    @*ContactNumber*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">ContactNumber*</label>
                            <div class="col-md-10">
                                <input name="ContactNumber" value="@ViewBag.model.ContactNumber" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_ContactNumber"></b>
                            </div>
                        </div>
                        <script>
                            validatorArray.push(
                                function () {
                                    var check = $('input[name=ContactNumber]').val();
                                    if (check == "") {
                                        formValidity = false;
                                        $('b[name=error_ContactNumber]').html("Sub User Group Contact Number is required.");
                                    }
                                });
                        </script>
                    </div>
                    @*ConcernMailAddress*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">ConcernMailAddress*</label>
                            <div class="col-md-10">
                                <input name="ConcernMailAddress" value="@ViewBag.model.ConcernMailAddress" type="text" class="form-control" style="text-transform:uppercase">
                                <b class="errorMessage" data-category="errorMessage" name="error_ConcernMailAddress"></b>
                            </div>
                        </div>
                        @*<script>
                            validatorArray.push(
                                function () {
                                    var check = $('input[name=ConcernMailAddress]').val();
                                    if (check == "") {
                                        formValidity = false;
                                        $('b[name=error_ConcernMailAddress]').html("Sub User Group Contact Number is required.");
                                    }
                                });
                        </script>*@
                    </div>
                    @*FK_Depo*@
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label">User Group*</label>
                            <div class="col-md-10">
                                @Html.DropDownList("FK_Depo", ViewBag.Depoes as SelectList, "Select", new { @class = "form-control" })
                                <b class="errorMessage" data-category="errorMessage" name="error_FK_Depo"></b>
                            </div>
                        </div>
                        <script>
                            validatorArray.push(
                                function () {
                                    var check = $('select[name=FK_Depo]').val();
                                    if (check == "") {
                                        formValidity = false;
                                        $('b[name=error_FK_Depo]').html("Depo is required.");
                                    }
                                });
                        </script>
                    </div>
                    <div class="box-footer">
                        @*<a class="btn btn-default" href="/DepoGroup/Index">Back To List</a>*@
                        <input type="button" class="btn btn-info pull-right" value="Create" onclick="TrySubmit()" />
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>
@*Date Picker*@
<script src="~/Theme/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
@*Select2*@
<script src="~/Theme/bower_components/select2/dist/js/select2.min.js"></script>
<script>
    $(function () {
        $('select[name=FK_Depo]').select2();
    });
</script>
